{
  "manifest_version": 3,
  "name": "MyGVP Extension",
  "version": "1.0.0",
  "description": "A browser extension for fetching GVP results",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/android-chrome-512x512.png"
  },
  "permissions": ["storage", "scripting", "webRequest"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/android-chrome-512x512.png"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
